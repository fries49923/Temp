<Window x:Class="ToolKitMvvmTest02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolKitMvvmTest02"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Thickness x:Key="Margin.Top">0,25,0,0</Thickness>
    </Window.Resources>

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>

        <StackPanel Margin="20">

            <!--Name-->
            <TextBlock Text="Name:"/>
            <TextBox Text="{Binding Path=Name,
                                    UpdateSourceTrigger=PropertyChanged}"/>

            <!--Phone-->
            <TextBlock Margin="{StaticResource Margin.Top}"
                       Text="Phone:"/>
            <TextBox Text="{Binding Path=Phone,
                                    UpdateSourceTrigger=PropertyChanged}">

                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <AdornedElementPlaceholder/>
                            <TextBlock Text="{Binding [0].ErrorContent}"
                                       Foreground="Red"/>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>

            <!--Email-->
            <TextBlock Margin="{StaticResource Margin.Top}"
                       Text="Email:"/>
            <TextBox Text="{Binding Path=Email,
                                    UpdateSourceTrigger=PropertyChanged}">
                
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <AdornedElementPlaceholder/>
                            <TextBlock Text="{Binding [0].ErrorContent}"
                                       Foreground="Red"/>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                
            </TextBox>

            <Button Margin="{StaticResource Margin.Top}"
                    Content="Show Info"
                    Command="{Binding Path=ShowInfoCommand}"/>

        </StackPanel>

    </Grid>

</Window>
