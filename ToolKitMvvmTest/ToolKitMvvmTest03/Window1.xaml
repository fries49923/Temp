<Window x:Class="ToolKitMvvmTest03.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolKitMvvmTest03"
        mc:Ignorable="d"
        Title="Window1"
        Height="450"
        Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:Window1ViewModel/>
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="listBoxTest"
                 ItemsSource="{Binding Path=TestItemsCollection}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Height" Value="50"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Button Grid.Row="1"
                Content="Add item and scroll to end"
                Command="{Binding Path=AddItemAndScrollToEndCommand}"/>
    </Grid>

</Window>
